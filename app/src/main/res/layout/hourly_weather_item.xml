<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rootCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/card_default_elevation"
        app:cardCornerRadius="@dimen/card_default_corner_radius"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginVertical="@dimen/card_default_vertical_margin"
        android:layout_marginHorizontal="@dimen/card_default_horizontal_margin"
        style="@style/Widget.Material3.CardView.Elevated">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/layout_default_content_padding"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:gravity="center"
                tools:text="9:41" />

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_margin="@dimen/icon_default_margin"
                android:layout_width="@dimen/icon_large_size"
                android:layout_height="@dimen/icon_large_size"/>

            <TextView
                android:id="@+id/tvTemp"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="21Â°"
                android:gravity="center"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.fragments.page.WeatherPageFragment"
    android:id="@+id/rootMotionLayout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapseToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:expandedTitleTextColor="@color/transparent"
            app:title=""
            app:titleCollapseMode="fade"
            app:collapsedTitleTextAppearance="@style/collapsed_toolbar_tittle"
            app:expandedTitleTextAppearance="@style/collapsed_toolbar_tittle"
            app:expandedTitleGravity="center"
            app:collapsedTitleGravity="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivWeather"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:text=""
                    android:textSize="64sp"
                    app:layout_constraintBottom_toTopOf="@+id/tvWeather"
                    app:layout_constraintStart_toEndOf="@+id/tvTemp"
                    app:layout_constraintTop_toTopOf="@+id/tvTemp"
                    app:layout_constraintVertical_bias="0.25"
                    tools:text="°" />

                <TextView
                    android:id="@+id/tvMaxMinTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvWeather"
                    tools:text="Max.: 26°, min.: 9°" />

                <TextView
                    android:id="@+id/tvWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="48dp"
                    android:autoSizeMinTextSize="12dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="42sp"
                    app:layout_constraintBottom_toTopOf="@+id/tvMaxMinTemp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTemp"
                    tools:text="Clear" />

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:text=""
                    android:textSize="128sp"
                    app:layout_constraintBottom_toTopOf="@+id/tvWeather"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="9" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hourItemsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="@dimen/card_default_corner"
                app:cardElevation="@dimen/card_default_elevation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="@dimen/card_default_stroke_width">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNextHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/hourly_forecast"
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_next_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:id="@+id/detailsContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_def_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_default_corner"
                    app:cardElevation="@dimen/card_default_elevation"
                    app:strokeWidth="@dimen/card_default_stroke_width">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvSunriseTittle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:text="@string/sunrise"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvSunrise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:autoSizeMaxTextSize="32sp"
                            android:autoSizeMinTextSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textSize="32sp"
                            tools:text="9:41" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_def_height"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_default_corner"
                    app:cardElevation="@dimen/card_default_elevation"
                    app:strokeWidth="@dimen/card_default_stroke_width">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvSunsetTittle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:text="@string/sunset"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvSunset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:autoSizeMaxTextSize="32sp"
                            android:autoSizeMinTextSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textSize="32sp"
                            tools:text="21:41" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailsContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_def_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_default_corner"
                    app:cardElevation="@dimen/card_default_elevation"
                    app:strokeWidth="@dimen/card_default_stroke_width">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvUVTittle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/uv_index"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvUV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:autoSizeMaxTextSize="32sp"
                            android:autoSizeMinTextSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textSize="32sp"
                            tools:text="4" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/vUVColor"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_shape" />

                            <TextView
                                android:id="@+id/tvUVDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:autoSizeMaxTextSize="24sp"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textSize="24sp"
                                tools:text="Moderate" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_def_height"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_default_corner"
                    app:cardElevation="@dimen/card_default_elevation"
                    app:strokeWidth="@dimen/card_default_stroke_width">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvVisibilityTittle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/visibility"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvVisibility"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:autoSizeMaxTextSize="32sp"
                            android:autoSizeMinTextSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textSize="32sp"
                            tools:text="10 km" />

                        <TextView
                            android:id="@+id/tvVisibilityDescription"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start|bottom"
                            android:maxLines="2"
                            android:textSize="16sp"
                            tools:text="Visibility reduced due to light haze" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailsContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_def_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_default_corner"
                    app:cardElevation="@dimen/card_default_elevation"
                    app:strokeWidth="@dimen/card_default_stroke_width">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvPressureTittle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/pressure"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvPressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:autoSizeMaxTextSize="32sp"
                            android:autoSizeMinTextSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="2"
                            android:textSize="32sp"
                            tools:text="765\nмм.рт.ст" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_def_height"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_default_corner"
                    app:cardElevation="@dimen/card_default_elevation"
                    app:strokeWidth="@dimen/card_default_stroke_width">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvWindTittle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/wind"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvWind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:autoSizeMaxTextSize="32sp"
                            android:autoSizeMinTextSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textSize="32sp"
                            tools:text="5 km/h" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvWindDirection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textSize="16sp"
                                tools:text="Direction: 225°" />

                            <TextView
                                android:id="@+id/tvWindGust"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textSize="16sp"
                                tools:text="Gust: 10.1 m/s" />

                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailsContainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_def_height"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_default_corner"
                    app:cardElevation="@dimen/card_default_elevation"
                    app:strokeWidth="@dimen/card_default_stroke_width">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvFeelsLikeTittle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:text="@string/feels_like"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvTempFeelsLike"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:autoSizeMaxTextSize="32sp"
                            android:autoSizeMinTextSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textSize="32sp"
                            tools:text="10°" />

                        <TextView
                            android:id="@+id/tvTempFeelsDescription"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start|bottom"
                            android:maxLines="2"
                            android:textSize="16sp"
                            tools:text="Feels about the same" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_def_height"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_default_corner"
                    app:cardElevation="@dimen/card_default_elevation"
                    app:strokeWidth="@dimen/card_default_stroke_width">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvHumidityTittle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/humidity"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:autoSizeMaxTextSize="32sp"
                            android:autoSizeMinTextSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textSize="32sp"
                            tools:text="15%" />

                        <TextView
                            android:id="@+id/tvDewPoint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start|bottom"
                            android:maxLines="2"
                            android:textSize="16sp"
                            tools:text="Dew point now: -14°" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="@dimen/card_default_corner"
                app:cardElevation="@dimen/card_default_elevation"
                app:strokeWidth="@dimen/card_default_stroke_width">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvChance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/chance_of_rain"
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/graphView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/card_def_height" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dailyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="@dimen/card_default_corner"
                app:cardElevation="@dimen/card_default_elevation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="@dimen/card_default_stroke_width">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNextDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/daily_forecast"
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_next_days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>




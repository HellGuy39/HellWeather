<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    motion:defaultDuration="500">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:motionInterpolator="linear"
        motion:duration="500">

        <OnSwipe
            motion:autoTransition="animateToEnd"
            motion:touchAnchorId="@+id/nestedSV"
            motion:autoCompleteMode="spring"
            motion:dragDirection="dragUp"
            motion:touchAnchorSide="top" />
       <KeyFrameSet>

           <!-- Frame 10 -->
           <KeyAttribute
               motion:motionTarget="@+id/tvMaxMinTemp"
               motion:framePosition="10"
               android:alpha="0.25"/>
           <KeyAttribute
               motion:motionTarget="@+id/tvWeather"
               motion:framePosition="10"
               android:alpha="0.75"/>

           <!-- Frame 20 -->

           <KeyAttribute
               motion:motionTarget="@+id/tvMaxMinTemp"
               motion:framePosition="20"
               android:alpha="0.0"/>

           <KeyAttribute
               motion:motionTarget="@+id/tvWeather"
               motion:framePosition="20"
               android:alpha="0.5"/>

           <!-- Frame 30 -->

           <KeyAttribute
               motion:motionTarget="@+id/tvWeather"
               motion:framePosition="30"
               android:alpha="0.0"/>

           <KeyAttribute
               motion:motionTarget="@+id/tvTemp"
               motion:framePosition="30"
               android:alpha="1.0"/>

           <KeyAttribute
               motion:motionTarget="@+id/tvDot"
               motion:framePosition="30"
               android:alpha="1.0"/>

           <KeyAttribute
               motion:motionTarget="@+id/tvTextTop"
               motion:framePosition="30"
               android:alpha="0.5"/>

           <!-- Frame 50 -->

           <KeyAttribute
               motion:motionTarget="@+id/tvTemp"
               motion:framePosition="50"
               android:alpha="0.5"/>

           <KeyAttribute
               motion:motionTarget="@+id/tvDot"
               motion:framePosition="50"
               android:alpha="0.5"/>

           <KeyAttribute
               motion:motionTarget="@+id/tvTextTop"
               motion:framePosition="50"
               android:alpha="0.5"/>

           <!-- Frame 60 -->

           <KeyAttribute
               motion:motionTarget="@+id/tvTextTop"
               motion:framePosition="60"
               android:alpha="0.9"/>

           <KeyAttribute
               motion:motionTarget="@+id/tvTemp"
               motion:framePosition="60"
               android:alpha="0.1"/>

           <KeyAttribute
               motion:motionTarget="@+id/tvDot"
               motion:framePosition="60"
               android:alpha="0.1"/>

       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:visibility="invisible"
            android:id="@+id/tvMaxMinTemp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <Constraint
            android:visibility="invisible"
            android:id="@+id/tvDot"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <Constraint
            android:visibility="invisible"
            android:id="@+id/tvWeather"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <Constraint
            android:visibility="invisible"
            android:id="@+id/tvTemp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <Constraint
            android:id="@+id/guidelineMotion"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintGuide_percent="0.07" />

        <Constraint
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTextTop"
            android:visibility="visible"/>

    </ConstraintSet>

</MotionScene>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_weather">

    <navigation android:id="@+id/navigation_weather"
        app:startDestination="@id/weatherFragment">

        <fragment
            android:id="@+id/weatherFragment"
            android:name="com.hellguy39.hellweather.presentation.fragments.weather.WeatherFragment"
            android:label="fragment_weather"
            tools:layout="@layout/fragment_weather" >
            <action
                android:id="@+id/action_weatherFragment_to_locationFragment"
                app:destination="@id/locationFragment" />
            <action
                android:id="@+id/action_weatherFragment_to_dailyWeatherDetailsFragment"
                app:destination="@id/dailyWeatherDetailsFragment" />
            <action
                android:id="@+id/action_weatherFragment_to_hourlyWeatherDetailsFragment"
                app:destination="@id/hourlyWeatherDetailsFragment" />
        </fragment>
        <fragment
            android:id="@+id/locationFragment"
            android:name="com.hellguy39.hellweather.presentation.fragments.location.LocationFragment"
            android:label="fragment_location"
            tools:layout="@layout/fragment_location" />
        <fragment
            android:id="@+id/dailyWeatherDetailsFragment"
            android:name="com.hellguy39.hellweather.presentation.fragments.daily_weather_details.DailyWeatherDetailsFragment"
            android:label="fragment_daily_weather_details"
            tools:layout="@layout/fragment_daily_weather_details" />
        <fragment
            android:id="@+id/hourlyWeatherDetailsFragment"
            android:name="com.hellguy39.hellweather.presentation.fragments.hourly_weather_details.HourlyWeatherDetailsFragment"
            android:label="fragment_hourly_weather_details"
            tools:layout="@layout/fragment_hourly_weather_details" />
    </navigation>

</navigation>
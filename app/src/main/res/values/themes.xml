<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HellWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_gray_1</item>
        <item name="colorPrimaryVariant">@color/material_gray_3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/material_gray_5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status and nav bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/clearSkyDayStart</item>

        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor">@color/clearSkyDayEnd</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/gradient_clear_day</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.HellWeather.SunriseOrSunset" parent="Theme.HellWeather">

        <item name="android:windowBackground">@drawable/gradient_sunset_or_sunrise</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppSplashTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_day</item>
        <!--<item name="android:navigationBarColor">@color/splash_day_background</item>
        <item name="android:statusBarColor">@color/splash_day_background</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="Theme.HellWeather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.HellWeather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.HellWeather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
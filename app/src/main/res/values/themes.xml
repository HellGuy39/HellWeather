<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HellWeather" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/clearSkyDayStart</item>
        <item name="colorPrimaryVariant">@color/material_gray_3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/material_gray_5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status and nav bar color. -->
        <!--<item name="android:windowLightStatusBar">false</item>-->
        <!--<item name="android:statusBarColor">@color/clearSkyDayStart</item>-->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor">@color/clearSkyDayEnd</item>-->
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/gradient_clear_day</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>

        <item name="colorSecondaryContainer">@color/clearSkyDayStart50</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="toolbar_tittle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>


    <style name="AppSplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_day</item>
        <!--<item name="android:navigationBarColor">@color/splash_day_background</item>
        <item name="android:statusBarColor">@color/splash_day_background</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.HellWeather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.HellWeather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.HellWeather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>